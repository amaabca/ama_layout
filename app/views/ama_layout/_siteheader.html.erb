<header class="site-header">
  <div class="row">
    <div id="navWrapper">
      <div id="pattern" class="pattern">

        <%= link_to(image_tag("AMA-Logo.png"), "https://www.ama.ab.ca") %>
        <% if current_user %>
          <a href="#" class="menu-link show-for-small-only"></a>
          <nav id="menu" role="navigation" class="show-for-small-only">
            <ul>
              <%= render 'ama_layout/nav_links' %>
            </ul>
          </nav>
        <% end  %>
      </div>
    </div>
  </div>
</header>
<script>
$(document).ready(function() {
  var menulink = $('.menu-link');
  var nav = $('#menu');

  menulink.click(function() {
    nav.toggleClass('active');
    return false;
  });
});
</script>
