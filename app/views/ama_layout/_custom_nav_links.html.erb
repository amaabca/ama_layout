<% navigation_items.each_with_index do | (key, value), index| %>
  <li class="dashboard-nav dashboard-title <%= 'mt0' if index == 0 %>">
    <%= link_to "#{key}<br/><span>#{ value.try(:[], :subtitle) }</span>".html_safe,
      "#{ value.fetch(:link) }",
      target: "#{ value.try(:[], :target) }",
      alt: "#{ value.try(:[], :alt) }",
      class: active_page("#{ value.fetch(:link) }") %>
  </li>
<% end %>
<% if current_user %>
  <li class="dashboard-nav dashboard-title"><%= link_to 'Sign Out', logout_path %></li>
<% end %>
